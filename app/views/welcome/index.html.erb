<% content_for :log_in_content do %>
  <ul class="nav navbar-nav navbar-right">
    <li class="page-scroll">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :email, :class => "logintext" %>
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :password, :class => "logintext" %>
          <%= f.password_field :password, autocomplete: "off" %>  
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
              <%= f.label :remember_me, :class => "logintext" %>
        <% end %>
        <%= f.submit "Log in", :class => "btn btn-lg btn-primary"%>
      <% end %>
    </li>
  </ul>
<% end %>

<div class="well">
  <% if not user_signed_in? %>
    <div class="row">
      <div class="col-md-5">
        <%= image_tag("logo-tony.png", :alt => "rss feed", :id => "logo") %>
      </div>
      <div class="col-md-offset-2 col-md-5">
        <%= render :template => "devise/registrations/new" %>
        
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end -%>
    </div>
  <% end %>
</div>