<div ng-app='app.profileApp' ng-controller='profileCtrl'>
  
  <%= bootstrap_form_for(@profile) do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field" >
      <%= f.text_field :nickname %>
    </div>
    <div class="field">
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label :language_id %><br>
      <select id="profile_language_id" name="profile[language_id]">
        <option ng-repeat="language in languages" value="{{language.id}}">
          {{language.name}}
        </option>
      </select>
    </div>
    <div class="field">
      <%= f.text_field :telf %>
    </div>
    <div class="field">
      <%= f.date_select :birthdate %>
    </div>
    <div class="field">
      <%= f.text_area :about %>
    </div>
    <div class="field">
      <%= f.text_field :question %>
    </div>
    <div class="field">
      <%= f.text_field :answer %>
    </div>

    <div class="field">
      <%= f.text_field :gender %>
    </div>

    <div class="field">
      <%= f.file_field :photo, :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit  :class => "btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>